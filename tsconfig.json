{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@transformer/core": [
        "libs/core/src"
      ],
      "@transformer/core/*": [
        "libs/core/src/*"
      ],
      "@adapters/kafka": [
        "libs/kafka/src"
      ],
      "@adapters/kafka/*": [
        "libs/kafka/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}